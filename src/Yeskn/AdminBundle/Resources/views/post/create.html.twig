{% extends '@YesknAdmin/base.html.twig' %}
{% form_theme form 'form/vertical-field-2.html.twig' 'form/vertical-checkbox-type.html.twig' %}
{% form_theme form.content 'form/vertical-html-textarea.html.twig' %}

{% block page_wraper %}
    {{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">
                    文章列表 &raquo; {{ title is defined ? title : '创建新的文章' }}
                        <div class="pull-right">
                            <div class="btn-group" role="group" aria-label="...">
                                <button type="button" class="btn btn-info btn-sm"><i class="fa fa-save"></i> 存草稿</button>
                                <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-save"></i> 立即发布</button>
                            </div>
                        </div>
                </h3>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-11">
                        {{ form_widget(form) }}
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}

{% block footer_javascript %}
    {{ parent() }}

    <script>
        $(function () {
            $('form[name="post"]').submit(function () {
                $(this).find('#post_content').val(editorPlugin.result.txt.html());
            });
            const editorPlugin = window.YesknPlugins.get('WangEditor', function (wangEditor) {
                const vmoexEditor = new wangEditor('#formHtmlEditor');
                vmoexEditor.customConfig.printLog = false;
                vmoexEditor.customConfig.menus = [
                    'head',  // 标题
                    'bold',  // 粗体
                    'fontSize',  // 字号
                    'fontName',  // 字体
                    'italic',  // 斜体
                    'underline',  // 下划线
                    'strikeThrough',  // 删除线
                    'foreColor',  // 文字颜色
                    'backColor',  // 背景颜色
                    'link',  // 插入链接
                    'list',  // 列表
                    'justify',  // 对齐方式
                    'quote',  // 引用
                    'emoticon',  // 表情
                    'image',  // 插入图片
                    'table',  // 表格
                    'video',  // 插入视频
                    'code',  // 插入代码
                    'undo',  // 撤销
                    'redo'  // 重复
                ];
                vmoexEditor.create();

                return vmoexEditor;
            });
        });
    </script>
{% endblock %}
